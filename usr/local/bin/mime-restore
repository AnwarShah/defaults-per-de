#!/bin/bash

DE_SPECIFIC_MIME_FILE="$HOME/.config/mimeapps-$XDG_CURRENT_DESKTOP.list"
MIME_FILE="$HOME/.config/mimeapps.list"

if [ -f $DE_SPECIFIC_MIME_FILE ]; then
	cp $DE_SPECIFIC_MIME_FILE $MIME_FILE
else
	cp $MIME_FILE $DE_SPECIFIC_MIME_FILE 2>/dev/null # fail silently when the $MIME_FILE is absent
fi


